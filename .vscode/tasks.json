{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "UV: Run Lock",
      "type": "shell",
      "command": ["uv lock"],
      "problemMatcher": []
    },
    {
      "label": "UV: Run Upgrade",
      "type": "shell",
      "command": ["uv sync --upgrade"],
      "problemMatcher": []
    },
    {
      "label": "Ruff: Run Check",
      "type": "shell",
      "command": [
        "uv run ruff check --fix --show-fixes --config pyproject.toml"
      ],
      "problemMatcher": []
    },
    {
      "label": "MyPy: Run Check",
      "type": "shell",
      "command": [
        "uv run mypy --ignore-missing-imports --config-file pyproject.toml"
      ],
      "problemMatcher": []
    },
    {
      "label": "Pre-Commit: Run Install",
      "type": "shell",
      "command": ["uv run pre-commit install"],
      "problemMatcher": []
    },
    {
      "label": "Pre-Commit: Run Autoupdate",
      "type": "shell",
      "command": ["uv run pre-commit autoupdate"],
      "problemMatcher": []
    },
    {
      "label": "Pre-Commit: Run Check",
      "type": "shell",
      "command": [
        "uv run pre-commit run --show-diff-on-failure --color=always --all-files"
      ],
      "problemMatcher": []
    },
    {
      "label": "Pre-Commit: Fix conflict with auto-fixes",
      "type": "shell",
      "command": ["git add ."],
      "problemMatcher": []
    },
    {
      "label": "PyTest: Run Tests",
      "type": "shell",
      "command": [
        "uv run python remove_pycache.py;",
        "uv run pytest -v tests/;",
        "uv run python remove_pycache.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "MkDocs: Create New Docs",
      "type": "shell",
      "command": ["uv run mkdocs new ."],
      "problemMatcher": []
    },
    {
      "label": "MkDocs: Run Build",
      "type": "shell",
      "command": ["uv run mkdocs build"],
      "problemMatcher": []
    },
    {
      "label": "MkDocs: Run Serve",
      "type": "shell",
      "command": ["uv run mkdocs serve"],
      "problemMatcher": []
    },
    {
      "label": "MkDocs: Run Deploy 0.1",
      "type": "shell",
      "command": [
        "uv run mike deploy --push --update-aliases 0.1 latest;",
        "uv run mike set-default --push latest"
      ],
      "problemMatcher": []
    },
    {
      "label": "Babel: Run Update Translations",
      "type": "shell",
      "command": [
        "uv run pybabel extract -o config/translations/messages.pot app;",
        "uv run pybabel update -i config/translations/messages.pot -d config/translations"
      ],
      "problemMatcher": []
    },
    {
      "label": "Babel: Run Compile Translations",
      "type": "shell",
      "command": ["uv run pybabel compile -d config/translations"],
      "problemMatcher": []
    },
    {
      "label": "UV: Run App",
      "type": "shell",
      "command": ["uv run python main.py"],
      "problemMatcher": []
    }
  ]
}
